<div class="info">
  <a href="/logout">
    <button type="button" class="btn btn-danger btn-lg logout">Cerrar Sesión</button>
  </a>
  {{! HIDDEN INPUTS }}
  <input type="hidden" id="perdidaGanada" value={{perdidaGanada}} />

  <input type="hidden" id="allAvgsArr" value={{allAvgsArr}} />
  <input type="hidden" id="quiz" value={{quiz}} />
  <input type="hidden" id="exam" value={{exam}} />
  <input type="hidden" id="homework" value={{homework}} />

  {{! INFO }}
  <div class="custom-info-container one">
    <div class="w-100 card mb-3" >
      <div class="card-body text-dark text-center">
        <h5 class="custom-card-title card-title" style="font-weight: bold;">Promedio General</h5>
        <p class="card-text">{{avg}}</p>
      </div>
    </div>
    <div class="w-100 card mb-3">
      <div class="card-body text-dark text-center">
        <h5 class="card-title" style="font-weight: bold;">Porcentaje Actual de
          Beca</h5>
        <p class="card-text">{{cantidadBecaAct}}%</p>
      </div>
    </div>
  </div>

  <div class="custom-info-container">
    <div class="w-100 card mb-3" >
      <div class="card-body text-dark text-center">
        <h5 class="card-title" style="font-weight: bold;">Estado de la Beca</h5>
        <p class="card-text">{{resBecado}}</p>
      </div>
    </div>
    <div class="w-100 card mb-3" >
      <div class="card-body text-dark text-center">
        <h5 class="card-title" style="font-weight: bold;">Racha Más Larga Con
          Beca</h5>
        <p class="card-text">{{racha}}</p>
      </div>
    </div>
  </div>

  {{! CHARTS }}
  <main class="charts-container">

    {{! PROMEDIOS EN TODAS LAS MATERIAS }}
    <canvas
      class="m-2 p-2"
      style="background: white no-repeat fixed center; border-radius:10px;"
      id="promedios"
      width="100"
      height="100"
    ></canvas>

    {{! ESTADO DE LA BECA }}
    <canvas
      class="m-2 p-2"
      style="background: white no-repeat fixed center; border-radius:10px;"
      id="estado"
      width="100"
      height="100"
    ></canvas>

    {{! CANTIDAD DE MESES CON BECA O SIN ELLA }}
    <canvas
      class="m-2 p-2"
      style="background: white no-repeat fixed center; border-radius:10px;"
      id="meses"
      width="100"
      height="100"
    ></canvas>

    {{! DESEMPEÑO DE TAREAS, QUIZZES, EXÁMENES }}
    <canvas
      style="background: white no-repeat fixed center; border-radius:10px;"
      class="m-2 p-2"
      id="desempeño"
      width="100"
      height="100"
    ></canvas>

  </main>
</div>